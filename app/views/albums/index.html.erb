<h1>Listing albums</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    
  </tr>

  <% @albums.each do |album| %>
    <tr>
      <td><%= album.title %></td>
      <td><%= album.description %></td>
      
      <td><%= link_to 'Show', album_path(album) %></td>
      <td><%= link_to 'Delete', album_path(album), :method => :delete %></td>
     
    </tr>
  <% end %>
</table>


<%= link_to 'New album', new_album_path %>